<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_dialog_historico_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Total de ativos: R$ XX,XX"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:minHeight="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        />

    <TextView
        android:id="@+id/txt_dialog_historico_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Total de gastos: R$ XX,XX"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:minHeight="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        />

    <TextView
        android:id="@+id/txt_dialog_historico_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Saldo total: R$ XX,XX"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:minHeight="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        />

</LinearLayout>